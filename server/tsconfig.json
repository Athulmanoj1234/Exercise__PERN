{
  "compilerOptions": {
    "target": "ES6",               // Set the output to ES6
    "module": "commonjs",          // Use CommonJS modules
    "outDir": "./dist",            // Output compiled files to the "dist" folder
    "rootDir": "./src",            // Source files are in the "src" folder
    "esModuleInterop": true,       // Enable compatibility with ES Modules
    "strict": true,                // Enable all strict type-checking options
    "skipLibCheck": true,
    "typeRoots": [
      "./src/typings",
      "./node_modules/@types"
    ],
    "types": ["node", "express", "passport"]
            // Skip checking library files (for faster compilation)
            
  },
  "include": ["src/**/*.ts", "src/typings/**/*.d.ts"],       // Include all .ts files under the "src" directory
  "exclude": ["node_modules"]       // Exclude "node_modules" from compilation
}